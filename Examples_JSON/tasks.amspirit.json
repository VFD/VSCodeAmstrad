{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make dsk with all .bas files",
            "command": "ManageDsk\\Managedsk.exe",
            "args": [
                "-C",
                "-S${workspaceFolderBasename}.dsk",
                "-L${workspaceFolderBasename}.dsk",
                "-A*.bas",
                "-S${workspaceFolderBasename}.dsk"
            ]
        },
        {
            "label": "run amspirit",
            "command": "amspirit.bat",
            "args": [
                "${workspaceFolderBasename}.dsk",
                "${fileBasename}"
            ]
        },
        {
            "label": "build",
            "dependsOn": [
                "make dsk with all .bas files",
                "run amspirit"
            ]
        }
    ]
}